<exporter version="1.0">
  <!-- identifier of the exporter -->
  <name>craftyjs</name>

  <!-- display name of the exporter for the combo box -->
  <displayName>Crafty JS (JSON Hash)</displayName>
 
  <!-- description of the exporter -->
  <description>Exporter for Crafty JS - A flexible framework for Javascript games</description>
 
  <!-- exporter version -->
  <version>1.0</version>
 
  <!-- currently only one file allowed -
       more to come soon -->
  <files>
      <file>
          <!-- name of this file variable -->
          <name>craftyjson</name>
 
          <!-- human readable name (for GUI) -->
          <displayName>Crafty JS (JSONHash)</displayName>
 
          <!-- file extension for the file -->
          <fileExtension>json</fileExtension>

          <!-- description what the file contains, used in tooltips in the GUI -->
          <description>JSON data file for Crafty JS</description>

          <!-- name of the template file -->
          <template>template.json</template>
      </file>
  </files>
 
  <!-- target framework supports trimming -->
  <supportsTrimming>yes</supportsTrimming>
 
  <!-- target framework supports rotated sprites -->
  <supportsRotation>no</supportsRotation>
 
  <!-- rotated sprites direction (cw/ccw) -->
  <rotationDirection>cw</rotationDirection>
 
  <!-- supports npot sizes -->
  <supportsNPOT>true</supportsNPOT>

  <!-- target framework supports pivot point settings (optional, default=false) -->
  <supportsPivotPoint>false</supportsPivotPoint>
 
  <!-- ensure that width/height of generated texture is multiple of this factor (optional, default=1). -->
  <textureSizeFactor>1</textureSizeFactor>

</exporter>